<% provide(:title, '日志信息') %>
<div class="panel col-md-12 col-lg-12 col-sm-12 col-xs-12">

<h5 class="page-header" id="page_title_by_menu">修改密码</h5>

<%= bootstrap_form_tag(url: registration_path(resource_name, id: current_user.id ), :method => 'put', :html => {:class => 'form-horizontal col-lg-8 pjax-form', :style => "margin-left: 20%;"}) do |f| %>

  <%= devise_error_messages! %>

  <%= f.text_field :email, label: "邮箱：", value: current_user.email %>

  <%= f.password_field :password, label: "新密码：" %>

  <%= f.password_field :password_confirmation, label: "确认密码：" %>

  <%= f.password_field :current_password, label: "当前密码：" %>
  <div style="text-align: center;">
    <%= f.submit '提交', class: 'btn meedesidy_btn_save' %>
    <%= link_to "返回", '/', class: 'btn btn-default' %>
  </div>
<% end %>
</div>