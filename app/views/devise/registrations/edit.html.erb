<% provide(:title, '日志信息') %>
<div class="panel col-md-12 col-lg-12 col-sm-12 col-xs-12">

<h2><%= t('.title', resource: resource_class.model_name.human) %></h2>

<%= bootstrap_form_tag(url: registration_path(resource_name), :method => 'get', :html => {:class => 'form-horizontal col-lg-8 '}) do |f| %>

  <%= devise_error_messages! %>

  <%= f.text_field :email, label: "邮箱：" %>

  <%= f.password_field :password, label: "新密码：" %>

  <%= f.password_field :password_confirmation, label: "确认密码：" %>

  <%= f.password_field :current_password, label: "当前密码：" %>

  <%= f.submit '提交' %>

<% end %>

<h3><%= t('.cancel_my_account') %></h3>

<p><%= t('.unhappy') %> <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>

<%= link_to t('devise.shared.links.back'), :back %>
</div>