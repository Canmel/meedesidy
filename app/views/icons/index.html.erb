<% provide(:title, '菜单图标信息') %>
<div class="panel col-md-12 col-lg-12 col-sm-12 col-xs-12">
  <h5 class="page-header">查询条件</h5>
  <div class="dataTables_wrapper form-inline">
    <div>
    <%= search_form_for @q, :html => {:class => 'pjax-form'} do |f| %>
        <%= f.label "图标名称：", class: "control-label" %>
        <%= f.search_field :name_cont, class: 'form-control' %>
        <%= link_to '新增', :new_icon, class: "btn btn-success green" %>
        <button type="submit" class="btn btn-info" data-toggle="modal" data-target="#search_model">查询</button>
    <% end %>
    </div>
  </div>
  <h3 class="sub-header">图标列表
    <% if flash[:icons_notice] %>
        <div class="notice text-center"><span class="label label-info"><%= flash[:icons_notice] %></span></div>
    <% end %>
  </h3>
  <div class="table-responsive">
    <table class="table table-striped table-hover" id="editable-sample">
      <thead>
      <tr>
        <th>#</th>
        <th>图标名称</th>
        <th>CODE</th>
        <th>状态</th>
        <th>操作</th>
      </tr>
      </thead>
      <tbody>
      <% @icons.each_with_index do |icon, index| %>
        <tr>
          <td><%= sequence index %></td>
          <td><%= icon.name %></td>
          <td><%= icon.code %></td>
          <td><%= icon.status_i18n %></td>
          <td>
            <%= link_to '编辑', edit_icon_path(icon), class: 'label label-success'%>
            <%= link_to '删除', icon, data: {confirm: "确认要删除#{icon.name}?"}, method: :delete, class: "label label-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    共<%= @icons.total_count %>条 <%= @icons.total_pages %>页 <%= paginate @icons %>
  </div>
</div>