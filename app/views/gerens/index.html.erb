<% provide(:title, '车辆型号信息') %>
<div class="panel col-md-12 col-lg-12 col-sm-12 col-xs-12">
  <h5 class="page-header">查询条件</h5>
  <div class="dataTables_wrapper form-inline">
    <div>
    <%= search_form_for @q, :html => {:class => 'pjax-form'} do |f| %>
        <%= f.label "车型名称：", class: "control-label" %>
        <%= f.search_field :name_cont, class: 'form-control' %>
        <%= link_to '新增', :new_geren, class: "btn btn-success green" %>
        <button type="submit" class="btn btn-info" data-toggle="modal" data-target="#search_model">查询</button>
    <% end %>
    </div>
  </div>
  <h3 class="sub-header">车型列表
    <% if flash[:gerens_notice] %>
        <div class="notice text-center"><span class="label label-info"><%= flash[:gerens_notice] %></span></div>
    <% end %>
  </h3>
  <div class="table-responsive">
    <table class="table table-striped table-hover" id="editable-sample">
      <thead>
      <tr>
        <th>#</th>
        <th>车型名称</th>
        <th>车座数</th>
        <th>状态</th>
        <th>操作</th>
      </tr>
      </thead>
      <tbody>
      <% @gerens.each_with_index do |geren, index| %>
        <tr>
          <td><%= sequence index %></td>
          <td><%= geren.name %></td>
          <td><%= geren.seat_num %></td>
          <td><%= geren.status_i18n %></td>
          <td>
            <%= link_to '编辑', edit_geren_path(geren), class: 'label label-success'%>
            <%= link_to '删除', geren, data: {confirm: "确认要删除#{geren.name}?"}, method: :delete, class: "label label-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    共<%= @gerens.total_count %>条 <%= @gerens.total_pages %>页 <%= paginate @gerens %>
  </div>
</div>