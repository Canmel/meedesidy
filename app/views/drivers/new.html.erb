<% provide(:title, '新建司机') %>
<div class="panel col-md-12 col-lg-12 col-sm-12 col-xs-12">
  <h5 class="page-header" id="page_title_by_menu">新建司机</h5>

  <div style="width: 60%;">
    <div class="form">
      <%= bootstrap_form_for(@driver, layout: :horizontal, :html => { class: 'pjax-form' }) do |f| %>
          <%= f.text_field :name, label: "司机姓名", help: '必填' %>
          <%= f.text_field :id_card_no, label: "身份证号", help: '必填' %>
          <%= f.text_field :entry_time, class: "datepicker", label: "入职时间", help: '必填' %>
          <%= f.text_field :phone, label: "手机", help: '必填' %>
          <%= f.text_field :desc, label: "备注", help: '必填' %>
          <%= f.select :sex, sex_array, { label: "性别"}, {class:"form-control m-b"}%>
          <%= f.select :company_id, companies_array, label: "公司", help: '必填' %>
          <div class="form-group text-center">
            <%= link_to '取消', drivers_path, :class => 'btn btn-default' %>
            <%= f.submit "保存", class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
</div>