<% provide(:title, '新建公司') %>
<div class="panel col-md-12 col-lg-12 col-sm-12 col-xs-12">
  <h5 class="page-header" id="page_title_by_menu">新建公司</h5>

  <div style="width: 60%;">
    <div class="form">
      <%= bootstrap_form_for(@company, layout: :horizontal, :html => { class: 'pjax-form' }) do |f| %>
          <%= f.text_field :name, label: "公司名称", help: '必填' %>
          <%= f.text_field :addr, label: "身份证号", help: '必填' %>
          <%= f.text_field :phone, label: "入职时间", help: '必填' %>
          <%= f.text_field :contact_name, label: "联系人姓名", help: '必填' %>
          <%= f.text_field :contact_phone, label: "联系人手机", help: '必填' %>
          <%= f.text_field :sort_name, label: "简称", help: '必填' %>
          <div class="form-group text-center">
            <%= link_to '取消', companies_path, :class => 'btn btn-default' %>
            <%= f.submit "保存", class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
</div>