<% provide(:title, '公司信息') %>
<div class="panel col-md-12 col-lg-12 col-sm-12 col-xs-12">
  <h5 class="page-header">查询条件</h5>
  <div class="dataTables_wrapper form-inline">
    <div>
    <%= search_form_for @q, :html => {:class => 'pjax-form'} do |f| %>
        <%= f.label "姓名：", class: "control-label" %>
        <%= f.search_field :name_cont, class: 'form-control' %>
        <%= link_to '新增', :new_company, class: "btn btn-success green" %>
        <button type="submit" class="btn btn-info" data-toggle="modal" data-target="#search_model">查询</button>
    <% end %>
    </div>
  </div>
  <h3 class="sub-header">公司列表
    <% if flash[:company_notice] %>
        <div class="notice text-center"><span class="label label-info"><%= flash[:company_notice] %></span></div>
    <% end %>
  </h3>
  <div class="table-responsive">
    <table class="table table-striped table-hover" id="editable-sample">
      <thead>
      <tr>
        <th>#</th>
        <th>公司名称</th>
        <th>简称</th>
        <th>联系人</th>
        <th>电话</th>
        <th>状态</th>
        <th>操作</th>
      </tr>
      </thead>
      <tbody>
      <% @companies.each_with_index do |company, index| %>
        <tr>
          <td><%= sequence index %></td>
          <td><%= company.name %></td>
          <td><%= company.sort_name %></td>
          <td><%= company.contact_name %></td>
          <td><%= company.phone %></td>
          <td><%= company.status_i18n %></td>
          <td>
            <%= link_to '编辑', edit_company_path(company), class: 'label label-success'%>
            <%= link_to '删除', company, data: {confirm: "确认要删除#{company.name}?"}, method: :delete, class: "label label-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    共<%= @companies.total_count %>条 <%= @companies.total_pages %>页 <%= paginate @companies %>
  </div>
</div>