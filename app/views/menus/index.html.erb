<% provide(:title, '菜单信息') %>
<div class="panel col-md-12 col-lg-12 col-sm-12 col-xs-12">
  <h5 class="page-header" id="page_title_by_menu">查询条件</h5>
  <div class="dataTables_wrapper form-inline">
    <div>
    <%= search_form_for @q, :html => {:class => 'dataTables_filter_left'} do |f| %>
        <%= f.label "菜单名称：", class: "control-label" %>
        <%= f.search_field :name_cont, class: 'form-control' %>
        <%= link_to '新增', :new_menu, class: "btn btn-success green" %>
        <button type="submit" class="btn btn-info" data-toggle="modal" data-target="#search_model">查询</button>
    <% end %>
    </div>
  </div>
  <h3 class="sub-header">菜单列表
    <% if flash[:notice] %>
        <div class="notice text-center"><span class="label label-info"><%= flash[:notice] %></span></div>
    <% end %>
  </h3>
  <div class="table-responsive">
    <table class="table table-striped table-hover" id="editable-sample">
      <thead>
      <tr>
        <th>#</th>
        <th>名称</th>
        <th>备注</th>
        <th>地址</th>
        <th>操作</th>
      </tr>
      </thead>
      <tbody>
      <% @menus.each_with_index do |menu, index| %>
        <tr>
          <td><%= (@page.to_i-1)*@pageSize+index+1 %></td>
          <td><%= menu.name %></td>
          <td><%= menu.desc %></td>
          <td><%= menu.source %></td>
          <td>
            <%= link_to '编辑',edit_menu_path(menu), class: 'label label-success' %>
            <%= link_to '删除', menu, data: {confirm: "确认要删除#{menu.name}?"}, method: :delete, class: "label label-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>